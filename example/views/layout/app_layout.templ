package layout

import (
  "github.com/kefniark/mango/example/views/helpers"
)

templ AppLayout(name string) {
  <!doctype html>
  <html lang="en">
    <head>
      <meta charset="utf-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1"/>
      <link rel="icon" type="image/x-icon" href="/assets/favicon.png"/>
      <link rel="stylesheet" href={ helpers.AssetURL("css/tailwind.css") }></link>

      // include Flowbite via CDN
      <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.phoenix.min.js"></script>

      <title>Bootstrap demo</title>
    </head>
    <body class="p-4 flex gap-4 flex-col">
      { children... }
      @bottomMenu()
    </body>
  </html>
}